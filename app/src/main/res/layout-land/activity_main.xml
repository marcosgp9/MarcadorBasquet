<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="0dp"
            android:gravity="center|center"
            android:text="Team 1"
            style="@style/ScoreText" />

        <ImageButton
            android:id="@+id/restar1"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60sp"
            android:background="@drawable/button_background"
            android:contentDescription="Minus Button"
            android:onClick="decreaseScore"
            app:srcCompat="@drawable/ic_minus" />

        <TextView
            android:id="@+id/puntuacion1"
            style="@style/ScoreText"
            android:layout_width="120sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="60dp"
            android:gravity="center|center"
            android:text="0"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/sumar1"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="60sp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/button_background"
            android:contentDescription="Plus Button"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/ic_plus" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        style="@style/ScoreText"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="0dp"
        android:gravity="center|center"
        android:text="Team 2"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageButton
            android:id="@+id/restar2"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40sp"
            android:background="@drawable/button_background"
            android:contentDescription="Minus Button"
            android:onClick="decreaseScore"
            app:srcCompat="@drawable/ic_minus" />

        <TextView
            android:id="@+id/puntuacion2"
            style="@style/ScoreText"
            android:layout_width="120sp"
            android:layout_height="60sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="250dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="40sp"
            android:gravity="center|center"
            android:text="0"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/sumar2"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="40sp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/button_background"
            android:contentDescription="Plus Button"
            android:onClick="increaseScore"
            app:srcCompat="@drawable/ic_plus" />
    </RelativeLayout>
</LinearLayout>